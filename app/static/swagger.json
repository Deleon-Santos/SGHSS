{
  "swagger": "2.0",
  "info": {
    "title": "VIDAPLUS SGHSS - GESTÃO HOSPITALAR",
    "description": "API RESTful para gestão de consultas.",
    "version": "1.0.0"
  },
  "host": "127.0.0.1:5000",
  "basePath": "/api",
  "schemes": ["http"],
  "produces": ["application/json"],
  "consumes": ["application/json"],
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Autenticação JWT. Use o formato: **Bearer {seu_token_aqui}**"
    }
  },

  "security": [
    {
      "BearerAuth": []
    }
  ],

  "paths": {
    "/login": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Login de usuário (gera token JWT válido por 60 minutos)",
        "description": "Permite que médicos, secretários e pacientes façam login e recebam um token JWT com validade de 60 minutos.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Credenciais de login do usuário.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "Deleon@Santos"
                },
                "senha": {
                  "type": "string",
                  "example": "4556949"
                }
              },
              "required": ["email", "senha"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "mensagem": { "type": "string", "example": "Login realizado com sucesso" },
                "token": { "type": "string", "example": "eyJ0eXAiOiJKV1QiLCJh..." },
                "expira_em": { "type": "string", "example": "60 minutos" }
              }
            }
          },
          "400": {
            "description": "Campos obrigatórios ausentes",
            "schema": {
              "type": "object",
              "properties": {
                "erro": { "type": "string", "example": "Email e senha são obrigatórios" }
              }
            }
          },
          "401": {
            "description": "Credenciais inválidas",
            "schema": {
              "type": "object",
              "properties": {
                "erro": { "type": "string", "example": "Credenciais inválidas" }
              }
            }
          }
        }
      }
    },
    "security": [
    {
      "BearerAuth": []
    }
    ],

    "/editar_senha": {
      "put": {
        "tags": ["Autenticação"],
        "summary": "Atualizar senha do usuário autenticado",
        "description": "Permite que médicos, secretários e pacientes autenticados atualizem sua senha. É obrigatório fornecer a senha atual e a nova senha.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "senha_atual": {
                  "type": "string",
                  "example": "123456"
                },
                "nova_senha": {
                  "type": "string",
                  "example": "novasenha"
                }
              },
              "required": ["senha_atual", "nova_senha"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Senha atualizada com sucesso"
            
          },
          "400": {
            "description": "Erro de validação ou campos faltando"
            
          },
          "401": {
            "description": "Senha atual incorreta"
            
          },
          "403": {
            "description": "Token inválido ou usuário não identificado"
            
          },
          "404": {
            "description": "Usuário não encontrado"
            
          },
          "500": {
            "description": "Erro interno ao atualizar senha"
          
          
          }
        }
      }
    },

  "/consulta/consulta_agenda_medica": {
      "get": {
        "tags": ["Medico"],
        "summary": "Consultar agenda do médico",
        "description": "Retorna todas as consultas do médico especificado, podendo filtrar por data.",
        "parameters": [
          
        ],
        "responses": {
          "200": { "description": "Lista de consultas encontradas" },
          "400": { "description": "Formato de data inválido" }
        }
      }
    },

    
    "/consulta/{consulta_id}/atendimento": {
      "post": {
        "tags": ["Medico"],
        "summary": "Finalizar consulta e registrar diagnóstico",
        "description": "Permite ao médico finalizar uma consulta e registrar o diagnóstico do paciente.",
        "parameters": [
          {
            "name": "consulta_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID da consulta a ser finalizada"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "diagnostico": { "type": "string" }
              },
              "required": ["diagnostico"]
            }
          }
        ],
        "responses": {
          "200": { "description": "Consulta finalizada com sucesso e diagnóstico registrado" },
          "400": { "description": "Diagnóstico não informado" },
          "404": { "description": "Consulta não encontrada" }
        }
      }
    },

    "/consulta/{consulta_id}/prescreve_tratamento": {
      "post": {
        "tags": ["Medico"],
        "summary": "Prescrever medicamento",
        "description": "Permite ao médico prescrever um novo medicamento durante uma consulta.",
        "parameters": [
          {
            "name": "consulta_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID da consulta relacionada à prescrição"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "medicacao": { "type": "string" },
                "dosagem": { "type": "string" },
                "orientacoes": { "type": "string" }
                
              },
              "required": ["medicacao", "dosagem", "orientacoes"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Medicamento prescrito com sucesso" },
          "400": { "description": "Campos obrigatórios faltando" },
          "404": { "description": "Consulta não encontrada" }
        }
      }
    },

    "/consulta/{consulta_id}/solicita_exame": {
      "post": {
        "tags": ["Medico"],
        "summary": "Solicitar exame para o paciente",
        "description": "Permite ao médico solicitar um exame durante o atendimento de uma consulta.",
        "parameters": [
          {
            "name": "consulta_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID da consulta relacionada ao exame"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "exame": { "type": "string" }
                
              },
              "required": ["Exame"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Exame solicitado com sucesso" },
          "400": { "description": "Campos obrigatórios faltando" },
          "404": { "description": "Consulta não encontrada" }
        }
      }
    },
    
    "/consulta/{consulta_id}/cancelamento_consulta": {
      "post": {
        "tags": ["Medico"],
        "summary": "Cancelar uma consulta",
        "parameters": [
          {
            "name": "consulta_id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": { "description": "Consulta cancelada com sucesso" },
          "404": { "description": "Consulta não encontrada" }
        }
      }
    },
 
    "/consulta/lista_medico_credenciado": {
      "get": {
        "tags": ["Paciente"],
        "summary": "Listar todos os médicos credenciados",
        "description": "Retorna uma lista de todos os médicos cadastrados, incluindo id, nome e especialidade.",
        "responses": {
          "200": {
            "description": "Lista de médicos retornada com sucesso",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer", "example": 1 },
                  "nome": { "type": "string", "example": "Dra. Maria Magalhães" },
                  "especialidade": { "type": "string", "example": "Pediatria" }
                }
              }
            }
          },
          "403": {
            "description": "Paciente não identificado",
            "schema": {
              "type": "object",
              "properties": {
                "erro": { "type": "string", "example": "Paciente não identificado." }
              }
            }
          }
        }
        
      }
    },
    "/consulta/agendamento_paciente": {
      "get": {
        "tags": ["Paciente"],
        "summary": "Ver todas as consultas agendadas de um paciente",
        "parameters": [
          
        ],
        "responses": {
          "200": { "description": "Lista de consultas do paciente" },
          "400": { "description": "Erro de formato de data" }
        }
      }
    },

    "/consulta/agenda_medica/{medico_id}": {
      "get": {
        "tags": ["Paciente"],
        "summary": "Listar agenda de um médico por especialidade",
        "parameters": [
          {
            "name": "medico_id",
            "in": "path",
            "required": true,
            "type": "integer",
            "description": "ID do médico"
          },
          {
            "name": "data",
            "in": "query",
            "type": "string",
            "format": "date",
            "description": "Filtrar por data (YYYY-MM-DD)"
          }
        ],
        "responses": {
          "200": { "description": "Lista de horários disponíveis" },
          "400": { "description": "Formato de data inválido" }
        }
      }
    },

    "/consulta/novo_agendamento": {
      "post": {
        "tags": ["Paciente"],
        "summary": "Agendar uma nova consulta",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "paciente_id": { "type": "integer" },
                "medico_id": { "type": "integer" },
                "data": { "type": "string", "format": "date" },
                "hora": { "type": "string", "format": "time" }
              },
              "required": ["paciente_id", "medico_id", "data", "hora"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Consulta agendada com sucesso" },
          "400": { "description": "Erro de validação" }
        }
      }
    },

    "/consulta/{consulta_id}/paciente_cancelamento": {
      "post": {
        "tags": ["Paciente"],
        "summary": "Cancelar uma consulta",
        "parameters": [
          {
            "name": "consulta_id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": { "description": "Consulta cancelada com sucesso" },
          "404": { "description": "Consulta não encontrada" }
        }
      }
    },
    
    
    
    "/cadastra/novo_medico": {
      "post": {
        "tags": ["Secretaria"],
        "summary": "Cadastrar novo médico",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": { "type": "string" },
                "especialidade": { "type": "string" },
                "crm": { "type": "string" },
                "email": { "type": "string" },
                "senha": { "type": "string" }
                

              },
              "required": ["nome", "especialidade", "crm", "usuario", "senha"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Médico cadastrado com sucesso" },
          "400": { "description": "Campos obrigatórios faltando" }
        }
      }
    },

    "/deleta/medico/{medico_id}": {
      "delete": {
        "tags": ["Secretaria"],
        "summary": "Excluir médico pelo ID",
        "parameters": [
          {
            "name": "medico_id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": { "description": "Médico excluído com sucesso" },
          "404": { "description": "Médico não encontrado" }
        }
      }
    },

    "/cadastra/novo_paciente": {
      "post": {
        "tags": ["Secretaria"],
        "summary": "Cadastrar novo paciente",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": { "type": "string" },
                "cpf": { "type": "string" },
                "data_nascimento": { "type": "string", "format": "date" },
                "email": { "type": "string" },
                "senha": { "type": "string" }
                
              },
              "required": ["nome", "cpf", "data_nascimento", "email", "senha"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Paciente cadastrado com sucesso" },
          "400": { "description": "Campos obrigatórios faltando" }
        }
      }
    },

    "/deleta/paciente/{paciente_id}": {
      "delete": {
        "tags": ["Secretaria"],
        "summary": "Excluir paciente pelo ID",
        "parameters": [
          {
            "name": "paciente_id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": { "description": "Paciente excluído com sucesso" },
          "404": { "description": "Paciente não encontrado" }
        }
      }
    },

    "/consulta/cadastro_geral_usuarios": {
      "get": {
        "tags": ["Secretaria"],
        "summary": "Listar todos os usuários do sistema",
        "description": "Retorna todos os usuários cadastrados (pacientes, médicos e secretarias), com opção de filtrar por tipo.",
        "parameters": [
          {
            "name": "tipo",
            "in": "query",
            "type": "string",
            "enum": ["paciente", "medico", "secretaria"],
            "description": "Filtrar usuários por tipo"
          }
        ],
        "responses": {
          "200": { "description": "Lista de usuários retornada com sucesso" },
          "403": { "description": "Acesso não autorizado" }
        }
      }
    },

    "/consulta/{consulta_id}/": {
    "get": {
      "tags": [
        "Secretaria"
      ],
      "summary": "Buscar consulta por ID",
      "description": "Retorna detalhes de uma consulta específica. Apenas usuários com nível de acesso 'secretario' podem acessar esta rota.",
     
      "produces": [
        "application/json"
      ],
      "parameters": [
        {
          "name": "consulta_id",
          "in": "path",
          "required": true,
          "description": "ID da consulta",
          "type": "integer",
          "example": 12
        }
      ],
      "responses": {
        "200": {
          "description": "Consulta encontrada com sucesso",
          "schema": {
            "type": "object",
            "properties": {
              "consulta": {
                "type": "object",
                "properties": {
                  "id": { "type": "integer", "example": 12 },
                  "paciente": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 5 },
                      "nome": { "type": "string", "example": "Carlos Oliveira" }
                    }
                  },
                  "medico": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer", "example": 3 },
                      "nome": { "type": "string", "example": "Dra. Ana Bezerra" },
                      "especialidade": { "type": "string", "example": "Cardiologia" }
                    }
                  },
                  "data": { "type": "string", "example": "2025-02-15" },
                  "hora": { "type": "string", "example": "14:30:00" },
                  "status": { "type": "string", "example": "agendada" },
                  "observacoes": { "type": "string", "example": "Paciente relatou dores no peito." }
                }
              }
            }
          }
        },
        "403": {
          "description": "Usuário sem permissão"
         
        },
        "404": {
          "description": "Consulta não encontrada"
          
         
        }
      }
    }
  },


    "/consulta/consultas_geral_marcadas": {
      "get": {
        "tags": ["Secretaria"],
        "summary": "Listar todas as consultas agendadas",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "type": "string",
            "enum": ["Agendada", "Realizada", "Cancelada"],
            "description": "Filtrar consultas por status"
          }
        ],
        "responses": {
          "200": { "description": "Lista de consultas retornada com sucesso" }
        }
      }
    }
  }
}







